<section>
    <div class="content">
        <h1>Recommendations</h1>
        <div class="grid-recommendations">
            {% for item in recommendations %}
                <div class="cell-recommendation light-background">
                    {% if external[item.id] %}
                        <div class="recommendation-icon">
                            <amp-img class="contain" layout="fill" src="{{external[item.id].data.logo}}" alt="{{item.id}} logo"></amp-img>
                        </div>
                    {% endif %}
                    <h3>{{ item.name }}</h3>
                    {{ item.recommendation }}
                </div>
            {% endfor %}
        </div>
    </div>
</section>