    @media (max-width: 350px) {
      .bd-hero {
        perspective: 525px;
        width: 350px;
        height: 290.325px;
        font-size: 26.25px;
      }
    }

    .bd-hero .bd-inner {
      width: 245%;
      transform-origin: left top;
      position: relative;
      transform: rotate3d(0, 1, 0, 37deg);
      top: -5%;
    }

    #hero-content {
      margin: 0;
      line-height: 1;
    }

    .bd-inner2 {
      opacity: 1;
      color: #00000033;
      padding-left: 2%;
    }
    .bd-hero-title {
      font-size: 300%;
      color: #00000077;
    }
    .bd-hero-icon {
      fill: #00000077;
      width: 1.2em;
      display: inline-block;
      vertical-align: bottom;
    }
    .bd-fadeout {
      background: linear-gradient(90deg, rgba(0,0,0,0) 63%, rgba(212,214,203,1) 100%);
      position: absolute;
      top: 0;
    }
    .bd-hero-background {
      background-image: url("/img/hero2.png");
      position: absolute;
      top: 0;
    }
    pre {
      margin: 0;
    }
  </style>
  <script async="async" custom-element="amp-script" src="https://cdn.ampproject.org/v0/amp-script-0.1.js"></script>
{% endblock %}

