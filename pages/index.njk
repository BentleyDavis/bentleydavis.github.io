{% extends "_includes/default.njk" %}

{% block head %}
  <style>
    .bd-hero {
      background-image: url("/img/hero2.jpg");
      background-size: cover;
      background-repeat: no-repeat;
      position: relative;
      overflow: hidden;
      transform-style: preserve-3d;
      margin: auto;
      max-height: 90vh;
      perspective-origin: 0 8%;

      perspective: 3000px;
      width: 2000px;
      height: 1659px;
      font-size: 150px;
    }

    @media (max-width: 1500px) {
      .bd-hero {
        perspective: 2250px;
        width: 1500px;
        height: 1244.25px;
        font-size: 112.5px;
      }
    }

    @media (max-width: 1250px) {
      .bd-hero {
        perspective: 1875px;
        width: 1250px;
        height: 1036.875px;
        font-size: 93.75px;
      }
    }

    @media (max-width: 1000px) {
      .bd-hero {
        perspective: 1500px;
        width: 1000px;
        height: 829.5px;
        font-size: 75px;
      }
    }

    @media (max-width: 850px) {
      .bd-hero {
        perspective: 1275px;
        width: 850px;
        height: 705.075px;
        font-size: 63.75px;
